<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mallnav" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

    <style name="Theme.Mallnav.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="itemBackground">@null</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemIconTint">@color/selector_bottom_navigation</item>
        <item name="itemTextColor">@color/selector_bottom_navigation</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemTextAppearanceActive">@style/Theme.Mallnav.TextAppearance.Active</item>
        <item name="itemTextAppearanceInactive">@style/Theme.Mallnav.TextAppearance.InActive</item>
        <item name="menu">@menu/menu_mallnav</item>
    </style>

    <style name="Theme.Mallnav.TextAppearance.Active" parent="">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Mallnav.TextAppearance.InActive" parent="">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Mallnav.MaterialAlertDialog.Rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/Theme.Mallnav.MaterialAlertDialog.Rounded.ShapeAppearanceOverlay
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/Theme.Mallnav.MaterialAlertDialog.Rounded.Body
        </item>
    </style>

    <style name="Theme.Mallnav.MaterialAlertDialog.Rounded.ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <!--<item name="cornerSize">@dimen/dialog_rounded_corners</item>-->
    </style>

    <style name="Theme.Mallnav.MaterialAlertDialog.Rounded.Body" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <!--<item name="android:textSize">@dimen/dialog_rounded_text</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Mallnav.Search" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/search_height</item>
        <item name="android:background">@drawable/bg_rounded_search</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:textSize">17sp</item>
        <item name="defaultQueryHint">@string/search_title</item>
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:focusable">false</item>
        <item name="queryBackground">@null</item>
    </style>

    <style name="Theme.Mallnav.List.Item" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorOnBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Theme.Mallnav.List.Item.Locations" parent="Theme.Mallnav.List.Item">
        <item name="android:background">@drawable/selector_li_bg</item>
    </style>

    <style name="Theme.Mallnav.List.Item.TextView.Locations" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:fontFamily">@font/circe_reg</item>
        <item name="android:textSize">@dimen/location_li_title</item>-->
    </style>

    <style name="Theme.Mallnav.List.Item.Round.Top" parent="Theme.Mallnav.List.Item">
        <item name="android:background">@drawable/bg_rounded_top</item>
    </style>

    <style name="Theme.Mallnav.List.Item.Round.Bottom" parent="Theme.Mallnav.List.Item">
        <item name="android:background">@drawable/bg_rounded_bottom</item>
    </style>

    <style name="Theme.Mallnav.List.Item.Round.Top.Locations" parent="Theme.Mallnav.List.Item.Locations">
        <item name="android:background">@drawable/bg_rounded_top_select</item>
    </style>

    <style name="Theme.Mallnav.List.Item.Round.Bottom.Locations" parent="Theme.Mallnav.List.Item.Locations">
        <item name="android:background">@drawable/bg_rounded_bottom_select</item>
    </style>

    <style name="Theme.Mallnav.TextView.Warning" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/colorErrorBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/warning_padding</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">@dimen/warning_text</item>
    </style>
</resources>